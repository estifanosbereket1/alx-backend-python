pipeline {
    agent any

    environment {
        PYTHON = 'python3'
    }

    tools {
        python 'Python 3'  // Provided by ShiningPanda plugin
    }

    stages {
        stage('Clone repo') {
            steps {
                git credentialsId: 'github-creds', url: 'https://github.com/estifanosbereket1/alx-backend-python.git'
            }
        }

        stage('Show branch') {
            steps {
                sh 'git branch'
            }
        }

        stage('Install dependencies') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip3 install --upgrade pip
                    pip3 install pytest
                    pip3 install -r messaging_app/requirements.txt || true
                '''
            }
        }

        stage('Run tests') {
            steps {
                sh '''
                    . venv/bin/activate
                    pytest messaging_app/tests --junitxml=test-report.xml
                '''
            }
        }

        stage('Publish test report') {
            steps {
                junit 'test-report.xml'
            }
        }
    }

    post {
        always {
            echo "âœ… Jenkins pipeline complete."
        }
    }
}
